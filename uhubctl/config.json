{
    "name": "uhubctl",
    "version": "0.1.0",
    "slug": "uhubctl",
    "description": "MQTT Bridge for uhubctl - control USB power per-port on smart USB hubs",
    "arch": [
        "amd64",
        "i386",
        "armhf",
        "armv7",
        "aarch64"
    ],
    "init": false,
    "startup": "application",
    "services": [
        "mqtt:need"
    ],
    "boot": "auto",
    "usb": true,
    "privileged": ["SYS_RAWIO"],
    "devices": ["/dev/bus/usb:/dev/bus/usb:rwm"],
    "full_access": true,
    "options": {
        "AVAILABILITY_TOPIC": "tele/uhubctl/hub/LWT",
        "STATUS_TOPIC": "tele/uhubctl/hub",
        "COMMAND_TOPIC": "cmnd/uhubctl/hub"
    },
    "schema": {
        "AVAILABILITY_TOPIC": "str",
        "STATUS_TOPIC": "str",
        "COMMAND_TOPIC": "str",
        "LOG_LEVEL": "list(debug|info|warn|error|critical)?"
    }
}
